<resources>

    <!-- Base application theme. -->
    <style name="SampleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Content">
        <item name="android:layout_marginLeft">@dimen/padding_left</item>
        <item name="android:layout_marginRight">@dimen/padding_right</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1.5px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
